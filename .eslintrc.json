{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "off",
    "@next/next/no-img-element": "off",
    "prefer-const": "off",
    "react/no-unescaped-entities": "off",
    "react-hooks/rules-of-hooks": "off",
    "jsx-a11y/alt-text": "off"
  },
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.jsx"],
      "excludedFiles": [
        "**/globals.css",
        "**/tailwind.config.js",
        "**/styles/**",
        "**/components/ui/**"
      ],
      "rules": {
        "no-restricted-syntax": [
          "warn",
          {
            "selector": "Literal[value=/^#([0-9A-Fa-f]{3}){1,2}$/]",
            "message": "Avoid hardcoded hex colors. Use design tokens: text-primary, bg-muted, border-border, etc."
          },
          {
            "selector": "TemplateLiteral[quasis.0.value.raw=/.*#([0-9A-Fa-f]{3}){1,2}.*/]",
            "message": "Avoid hardcoded hex colors in template literals. Use CSS variables: hsl(var(--primary)), etc."
          },
          {
            "selector": "JSXOpeningElement[name.name='button']:not([name.name=/^(Button|IconButton)$/])",
            "message": "Use <Button> or <IconButton> from '@/components/ui' instead of raw <button>. This ensures consistent styling and accessibility."
          },
          {
            "selector": "JSXOpeningElement[name.name='input']",
            "message": "Use <Input> from '@/components/ui' instead of raw <input>. This ensures consistent styling and validation."
          },
          {
            "selector": "JSXOpeningElement[name.name='textarea']",
            "message": "Use <Textarea> from '@/components/ui' instead of raw <textarea>. This ensures consistent styling."
          }
        ]
      }
    }
  ]
}
